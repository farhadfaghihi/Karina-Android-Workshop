<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:background="@color/grey_dark"
        >

    <Button
            android:id="@+id/btn_frg_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_dark"
            android:text="Open Fragment One"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_night"/>

    <Button
            android:id="@+id/btn_frg_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_dark"
            android:text="Open Fragment Two"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_night"/>

    <Button
            android:id="@+id/btn_frg_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_dark"
            android:text="Open Fragment Three"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_night"/>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>

